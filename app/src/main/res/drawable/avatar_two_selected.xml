<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unselected state -->
    <item android:state_checked="false" android:drawable="@drawable/afro" />

    <!-- Selected state -->
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/afro" android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" />
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/primary_600" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>