        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Delete Account"
            android:textColor="@color/gray_700"
            android:textSize="20sp"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:text="Deleting your profile will also delete all associated data. Are you sure you want to proceed?"
            android:textColor="@color/gray_500"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/confirm_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirm"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                android:background="@drawable/button_border"/>
            <View
                android:layout_width="18dp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/cancel_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:padding="12dp"
                android:gravity="center"
                android:textColor="@color/primary_600"
                android:fontFamily="@font/inter_semibold"
                android:background="@drawable/cancel_button_bg"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>