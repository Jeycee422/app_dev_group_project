<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/create_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Choose Avatar*"
            android:textColor="@color/gray_700"
            android:textSize="12sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:paddingVertical="10dp"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/avatar_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_1"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_one_selected"
                    android:button="@null"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radio_2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_two_selected"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radio_3"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_three_selected"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radio_4"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_four_selected"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radio_5"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_five_selected"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radio_6"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_six_selected"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radio_7"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_seven_selected"
                    android:button="@null" />

                <RadioButton
                    android:id="@+id/radio_8"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/avatar_eight_selected"
                    android:button="@null" />
            </RadioGroup>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Username*"
            android:textColor="@color/gray_700"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/gray_700" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Email*"
            android:textColor="@color/gray_700"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/gray_700" />

        <!--        <TextView-->
        <!--            android:id="@+id/textView3"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:fontFamily="@font/inter_regular"-->
        <!--            android:text="Password:"-->
        <!--            android:textColor="@color/gray_700"-->
        <!--            android:textSize="16sp"-->
        <!--            android:textStyle="bold" />-->

        <!--        <EditText-->
        <!--            android:id="@+id/editTextTextPassword"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="48dp"-->
        <!--            android:layout_marginBottom="30dp"-->
        <!--            android:background="@drawable/input_border"-->
        <!--            android:ems="10"-->
        <!--            android:inputType="textPassword"-->
        <!--            android:padding="10dp"-->
        <!--            android:paddingStart="15dp" />-->

        <TextView
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Create"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="Welcome!"
        android:textColor="@color/gray_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Start by creating your profile."
        android:textColor="@color/gray_500"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>